@model VendaDeAutomoveis.Entidades.Cliente

<div class="form-group">
    <div class="col-md-10">
        @Html.LabelFor(u => u.Nome, "Nome*")
        @Html.TextBoxFor(u => u.Nome, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.Nome)
    </div>
</div>

<div class="form-group">
    <div class="col-md-3">
        @Html.LabelFor(u => u.Data_Nascimento, "Data de Nascimento*")
        @Html.TextBoxFor(u => u.Data_Nascimento, new { @id = "dtnascimento", @class = "form-control" })
        @Html.ValidationMessageFor(u => u.Data_Nascimento)
    </div>
</div>

<div class="form-group">
    <div class="col-md-5">
        @Html.LabelFor(u => u.RG, "RG*")
        @Html.TextBoxFor(u => u.RG, new { @id = "rg", @class = "form-control" })
        @Html.ValidationMessageFor(u => u.RG)
    </div>
</div>

<div class="form-group">
    <div class="col-md-5">
        @Html.LabelFor(u => u.CPF, "CPF/MF*")
        @Html.TextBoxFor(u => u.CPF, new { @id = "cpf", @class = "form-control" })
        @Html.ValidationMessageFor(u => u.CPF)
    </div>
</div>

<div class="form-group">
    <div class="col-md-5">
        @Html.LabelFor(u => u.Email, "E-mail*")
        @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.Email)

    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.maskedinput.min.js"></script>
<script src="@Url.Content("~/Scripts/Utils/CreateEditCliente.js")"></script>
<script src="@Url.Content("~/Scripts/Utils/Utils.js")"></script>

<script type="text/javascript">

    $(document).ready(function () {
        $("#cpf").mask("999.999.999-99");
        //$('#cpf').mask('000.000.000-00', { reverse: true });
        $("#rg").mask("99.999.999-*");
        $("#dtnascimento").mask("99/99/9999");
        //$("#cep").mask("99999-999");
    });

</script>
