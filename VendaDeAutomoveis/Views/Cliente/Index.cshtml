@model IList<VendaDeAutomoveis.Entidades.Cliente>

<br />
<br />
<br />
<br />

<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>

            <th>Nome</th>
            <th width="110px">RG</th>
            <th width="120px">CPF/MF</th>
            <th>Data de Nascimento</th>
            <th>Tipo do Cliente</th>
            <th>E-mail</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Nome</td>
                <td>@u.RG</td>
                <td>@u.CPF</td>
                <td>@u.DataNascimento.ToString("dd/MM/yyyy")</td>
                <td>@u.TipoDoCliente</td>
                <td>@u.Email</td>
                <td>@Html.ActionLink("Editar", "EditarCliente", new { Id = u.IdCliente })</td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>

