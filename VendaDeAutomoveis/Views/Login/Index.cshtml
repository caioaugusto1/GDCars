@model VendaDeAutomoveis.Entidades.Login
@{
    Layout = string.Empty;
}

<!DOCTYPE html>
<head>
    <title>Acesso - GDCars</title>

    @{
        Html.RenderPartial("_partial/_cabecalho_principal");
    }

</head>

<body class="bodyLogin">
    <div class="slider_overlay"></div>
    <div class="main-container">
        <div class="row">
            @using (Html.BeginForm("Autenticar", "Login", FormMethod.Post, new { @class = "login-wrapper" }))
            {
                <div class="header">
                    <div class="row">
                        <div class="col-md-12">
                            <h3 style="color: #337ab7;">Login</h3>
                            <p>Digite o usuário e senha</p>
                            @if (ViewBag.Error == true)
                            {
                                @Html.ValidationMessage("login.Invalido", "", new { @class = "text-danger", @style = "color:red;" })
                            }
                        </div>
                    </div>
                </div>
                    <div class="content">
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @placeholder = "examplo@examplo.com.br", @class = "input col-md-12 col-sm-12 email" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @placeholder = "senha", @class = "input col-md-12 col-sm-12 password" } })
                                @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="actions">
                        <input type="submit" class="btn btn-blue btn-large pull-right" title="Acessar Sistema" data-toggle="tooltip" data-placement="bottom" value="Login" />
                        <div class="clearfix"></div>
                    </div>
            }
        </div>
    </div>
</body>
