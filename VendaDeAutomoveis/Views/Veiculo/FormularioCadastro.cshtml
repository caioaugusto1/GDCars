@model VendaDeAutomoveis.Entidades.Veiculo

<title>Cadastrar - Veículo</title>

@{
    ViewBag.Title = "Cadastrar - Veículo";
    //Html.RenderPartial("_partial/_cabecalho_principal");
}

<div class="dashboard-wrapper">
    <div class="page-title clearfix">
        <h2>
            Veículo
            <small>
                <ul>
                    <li>Home</li>
                    <li>/</li>
                    <li>Veículo</li>
                    <li>/</li>
                    <li>Cadastrar</li>
                </ul>
            </small>
        </h2>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="widget no-margin">
                <div class="widget-header">
                    <div class="title">
                        <span class="fs1" aria-hidden="true" data-icon="&#xe075;"></span> Cadastrar
                    </div>
                </div>
                <div class="widget-body">
                    <div class="row">
                        <div class="col-md-2 col-sm-3">
                            
                        </div>
                        <div class="col-md-10 col-sm-9">
                            @using (Html.BeginForm("AdicionarProduto", "Veiculo", FormMethod.Post, new { @class = "form-horizontal", @id = "form", enctype = "multipart/form-data" }))
                            {
                                Html.AntiForgeryToken();

                                Html.HiddenFor(model => model.Id);

                                Html.RenderPartial("_partial/_CreateEdit", Model);

                                Html.RenderPartial("~/Views/Shared/_partial/_btn_submit_cadastrar.cshtml");
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="@Url.Content("~/Scripts/Utils/Utils.js")"></script>
<script src="@Url.Content("~/Scripts/Utils/CreateEditVeiculo.js")"></script>
<script src="~/Content/bootstrap/js/jquery.mask_igorescobar.js"></script>
<script src="~/Content/bootstrap/js/bootstrap.js"></script>

<script>
    $('.valor').mask('#.##0,00', { reverse: true });
</script>




