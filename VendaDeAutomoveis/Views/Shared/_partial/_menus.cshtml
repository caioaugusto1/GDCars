@using VendaDeAutomoveis.Filters

<header>
    <div class="logo">
        GD<span>Cars</span>
    </div>

    <div id="mini-nav" class="hidden-phone">
        <ul>
            @if (SessionManager.UsuarioLogado != null)
            {
                <li>
                    <a href="login.html">
                        <span class="text-label">@SessionManager.UsuarioLogado.Nome </span>
                        <span class="fs1" aria-hidden="true" data-icon="&#xe088;"></span>
                    </a>
                    <ul class="user-summary">
                        <li>
                            <div class="summary">
                                <div class="user-pic">
                                    <img style="width: 80px;" src="~/Content/bootstrap/img/ccn.png" />
                                </div>
                                <div class="basic-details" style="padding-left: 20px;">
                                    <h4 class="no-margin">@SessionManager.UsuarioLogado.Nome </h4>
                                    <h5 class="no-margin">@SessionManager.UsuarioLogado.SobreNome </h5>
                                    <small>GDCars</small>
                                </div>

                                <div class="clearfix"></div>
                            </div>
                        </li>
                        <li>
                            <button class="btn btn-xs btn-danger pull-right" onclick="location.href='@Url.Action("Logout", "Login")'">Sair</button>
                            <span class="clearfix"></span>
                        </li>
                    </ul>
                </li>
            }
        </ul>
    </div>
</header>
