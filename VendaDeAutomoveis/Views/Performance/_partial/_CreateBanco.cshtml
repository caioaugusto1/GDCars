<div class="widget-body" style="background-color: #f5f5f5">
    @Html.LabelFor(model => model.Multimidia, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="onoffswitch">
        <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="enableSocialPosts" checked>
        <label class="onoffswitch-label" for="enableSocialPosts">
            <div class="onoffswitch-inner"></div>
            <div class="onoffswitch-switch"></div>
        </label>
    </div>
</div>

<br />

@Html.LabelFor(model => model.Modelo, htmlAttributes: new { @class = "control-label col-md-2" })
@Html.EnumDropDownListFor(model => model.Modelo, "Selecione", htmlAttributes: new { @class = "form-control", @id = "ModeloBanco" })
@Html.ValidationMessageFor(model => model.Modelo, "", new { @class = "text-danger" })

<br />

<label class="control-label col-md-2">Cor</label>
@Html.EnumDropDownListFor(model => model.CorBanco, "Selecione", htmlAttributes: new { @class = "form-control", @id = "CorBanco" })
@Html.ValidationMessageFor(model => model.CorBanco, "", new { @class = "text-danger" })

<br />

<label style="float:none !important">Valor</label>
<div class="input-group" style="width: 30%">
    <span class="input-group-addon">R$</span>
    <input type="text" id="BancoValor" name="Banco.Valor" class="form-control" data-val="true" data-val-required="O campo Valor é obrigatório.">
    <span class="input-group-addon">.00</span>
    @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
</div>
