@model VendaDeAutomoveis.Models.DetailsDeleteVendaViewModel

<head>
    @{
        ViewBag.Title = "Concretizar Venda";
    }
</head>

<body>
    <div class="main-container">
        <div class="dashboard-wrapper">
            <div class="page-title clearfix">
                <h2>
                    Venda
                    <small>
                        <ul>
                            <li>Home</li>
                            <li>/</li>
                            <li>Venda</li>
                            <li>/</li>
                            <li>Detalhes</li>
                        </ul>
                    </small>
                </h2>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="widget no-margin">
                        <div class="widget-header">
                            <div class="title">
                                <span class="text-error">Detalhes</span>
                            </div>
                        </div>
                        <div class="widget-body">
                            @using (Html.BeginForm("confirmar-venda", "administrativo-vendas", FormMethod.Post, new { id = "form", @class = "form-horizontal" }))
                            {
                                <table class="table table-striped table-hover">
                                    <tbody>
                                        @Html.Partial("_partial/_Details_Delete", Model)

                                        @if (Model.Endereco != null)
                                        {
                                            <table class="table table-striped table-hover no-margin">
                                                <thead>
                                                    <tr>
                                                        <th style="width:25%">Endereço</th>
                                                        <th style="width:5%">Número</th>
                                                        <th style="width:5%">Complemento</th>
                                                        <th style="width:10%">CEP</th>
                                                        <th style="width:10%">Bairro</th>
                                                        <th style="width:10%">Estado</th>
                                                        <th style="width:10%">Cidade</th>
                                                        <th style="width:10%"></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>@Model.Endereco.EnderecoNome</td>
                                                        <td>@Model.Endereco.Numero</td>
                                                        <td>@Model.Endereco.Complemento<em class="muted"> Is not Complement</em></td>
                                                        <td>@Model.Endereco.CEP</td>
                                                        <td>@Model.Endereco.Bairro</td>
                                                        <td>@Model.Endereco.Estado</td>
                                                        <td>@Model.Endereco.Cidade</td>
                                                        <td colspan="4">
                                                            <a href="@Url.Action("EditarEndereco", "Cliente", new { Id = Model.Endereco.Id })" class="btn btn-info btn-large pull-right">Editar</a>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        }
                                        <hr>
                                    </tbody>
                                </table>

                                if (ViewBag.IsDetailsFinish == true)
                                {
                                    @Html.Partial("~/Views/Shared/_partial/_btn_submit_cadastrar.cshtml")
                                }
                                else
                                {
                                    <div class="form_submit clearfix">
                                        <div class="row">
                                            <div class="col-sm-10 col-sm-offset-2">
                                                <button type="button" id="btnEditar" class="btn btn-primary btn-lg">Editar</button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script src="@Url.Content("~/Scripts/Utils/CreateEditVendasDetalhes.js")"></script>