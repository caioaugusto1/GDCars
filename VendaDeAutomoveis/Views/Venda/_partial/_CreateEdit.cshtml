@model VendaDeAutomoveis.Models.CadastrarVendaViewModel

<div class="form-group">
    <div class="col-md-5">
        @Html.LabelFor(m => m.Valor, "Valor do Veículo*")
        @Html.TextBoxFor(m => m.Valor, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Valor)
    </div>
</div>

<div class="form-group">
    <div class="col-md-5">
        @Html.Label("Custom Disponíveis*")
        @Html.DropDownListFor(c => c.Performance, new SelectList(Model.Performance, "Id", "ValorTotal"), "Customizações Disponíveis",
        new { @class = "form-control", @id = "customs" })
        @Html.ValidationMessage("FormaDePagamentoModel")
    </div>
</div>

<div class="form-group">
    <div class="col-md-5">
        @Html.Label("Formas de Pagamentos*")
        @Html.DropDownListFor(a => a.IdFormaDePagamento, new SelectList(Model.FormasDePagamentos, "Id", "Modelo"), "Forma de Pagamento",
        new { @class = "form-control", @id = "formaPagamento" })
    </div>
</div>

<div class="form-group">
    <div class="col-md-5">
        @Html.LabelFor(m => m.Tipo_Entrega, "Tipo de Entrega*")
        @Html.EnumDropDownListFor(m => m.Tipo_Entrega, "Tipo de Entrega", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Tipo_Entrega)
    </div>
</div>

<div class="form-group">
    <div class="col-md-5">
        @Html.LabelFor(m => m.Status, "Tipo de Entrega*")
        @Html.EnumDropDownListFor(m => m.Status, "Tipo de Entrega", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Status)
    </div>
</div>

