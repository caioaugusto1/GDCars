<div class="row">
    <div class="col-md-10">
        <div class="widget">
            <div class="widget-header">
                <div class="title">
                    <span class="fs1" aria-hidden="true" data-icon="&#xe14c;">@Html.LabelFor(a => a.Observacoes)</span>
                </div>
            </div>
            <div class="widget-body">
                <div class="control-group">
                    <div class="wysiwyg-container">
                        <textarea id="wysiwyg" name="Observacoes" class="col-sm-10 no-margin" placeholder="Digite o texto ..." style="height: 140px">
                      </textarea>
                    </div>
                </div>
                <div class="control-group info no-margin">
                    <div class="controls">
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
