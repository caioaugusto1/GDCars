@model VendaDeAutomoveis.Entidades.Venda

@{
    ViewBag.Title = "Editar - Venda";
    //Html.RenderPartial("_partial/_cabecalho_principal");
}

<div class="dashboard-wrapper">
    <div class="page-title clearfix">
        <h2>
            Editar
            <small>
                <ul>
                    <li>Home</li>
                    <li>/</li>
                    <li>Editar</li>
                    <li>/</li>
                    <li>Venda</li>
                </ul>
            </small>
        </h2>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="widget no-margin">
                <div class="widget-header">
                    <div class="title">
                        <span class="fs1" aria-hidden="true" data-icon="&#xe075;"></span> Editar
                    </div>
                </div>
                <div class="widget-body">
                    <div class="row">
                        <div class="col-md-2 col-sm-3">

                        </div>
                        <div class="col-md-10 col-sm-9">

                            @using (Html.BeginForm("Editar", "Venda", FormMethod.Post, new { @class = "form-horizontal", @id = "form" }))
                            {
                                @Html.AntiForgeryToken()

                                @Html.HiddenFor(a => a.Id);

                                <div class="form-group">
                                    <div class="col-md-5">
                                        @Html.LabelFor(m => m.Valor, "Valor do Veículo*")
                                        @Html.TextBoxFor(m => m.Valor, new { @class = "form-control", @disabled = "disabled" })
                                        @Html.ValidationMessageFor(m => m.Valor)
                                    </div>
                                </div>


                                <div class="form-group">
                                    <div class="col-md-5">
                                        @Html.LabelFor(m => m.Status, "Status*")
                                        @Html.EnumDropDownListFor(m => m.Status, "Tipo de Entrega", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Status)
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-5">
                                        @Html.LabelFor(m => m.Tipo_Entrega, "Tipo de Entrega*")
                                        @Html.EnumDropDownListFor(m => m.Tipo_Entrega, "Tipo de Entrega", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Tipo_Entrega)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-10">
                                        <div class="widget">
                                            <div class="widget-header">
                                                <div class="title">
                                                    <span class="fs1" aria-hidden="true" data-icon="&#xe14c;">@Html.LabelFor(a => a.Observacoes)</span>
                                                </div>
                                            </div>
                                            <div class="widget-body">
                                                <div class="control-group">
                                                    <div class="wysiwyg-container">
                                                        <textarea id="wysiwyg" name="Observacoes" class="col-sm-10 no-margin" placeholder="Digite o texto ..." style="height: 140px">
                      </textarea>
                                                    </div>
                                                </div>
                                                <div class="control-group info no-margin">
                                                    <div class="controls">
                                                        <div class="clearfix"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                Html.RenderPartial("~/Views/Shared/_partial/_btn_submit_salvar.cshtml");
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
